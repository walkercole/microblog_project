<!DOCTYPE html>
<html>
	<head>
		<title>Fumble</title>
		 <link rel="icon" href="/Edit-16.png" />
		<link rel="stylesheet" type="text/css" href="style.css">		
		<style>

		</style>
	</head>
	<body>
		<div id="titles"><a href="/"><img src="/Edit-16.png" width="23px;"><h1 id="fumble">Fumble</h1></a></div>
		<% flash.each do |name, msg| %>
	      <div class="<%= name %>"><%= msg %></div>
		<% end %>
		<br />
		<div class="account">
			<% if current_user %>
				<br />
				<fieldset id="pfb">
				<p> Hello, <%= current_user.username %>! </p>
				<a href="/logout"><button>Logout</button></a>
				<a href="/my_profile"><button>Profile</button></a>
				</fieldset>
			<% else %>
				<p> You are not logged in! </p>
				<fieldset>
				<form method="post" action="/login">
					<label for="username">Username:</label>
					<input id="username" name="username" />
					<label for="password">Password:</label>
					<input id="password" name="password" type="password" />
					<button>Log in</button>
				</form></fieldset>
				<br />
				<br />
				<fieldset><legend>If you are new, please sign up!</legend>
				<form method="post" action="/sign-up">
					<label for="regname">Register Username:</label>
					<input id="regname" name="regname" />
					<label for="regpass">Register Password:</label>
					<input id="regpass" name="regpass" />
					<button>Sign-up!</button>
				</form></fieldset>
			<% end %>
		</div>
		<%= yield %>
	</body>
</html>